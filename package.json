{
  "name": "react-starting-point",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage",
    "test:watchCoverage": "react-scripts test --coverage --watchAll",
    "e2e:ui": "cypress open",
    "e2e":
      "cypress run --reporter junit --reporter-options 'mochaFile=results/my-test-output.xml'",
    "storybook": "start-storybook -p 9009 -s public",
    "storybook:build": "build-storybook -c .storybook -o ./build/storybook"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [">0.2%", "not dead", "not ie <= 11", "not op_mini all"],
  "dependencies": {
    "classnames": "^2.2.6",
    "core-js": "^2.5.7",
    "es7-object-polyfill": "0.0.7",
    "formik": "^1.5.1",
    "prop-types": "^15.7.2",
    "query-string": "^5.1.1",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-redux": "^5.1.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.3",
    "redux": "^4.0.1",
    "redux-promise-middleware": "^6.1.0",
    "redux-thunk": "^2.3.0",
    "weakmap-polyfill": "^2.0.0",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/runtime": "^7.1.5",
    "@storybook/addon-actions": "^4.0.4",
    "@storybook/addon-centered": "^4.0.7",
    "@storybook/addon-info": "^4.0.12",
    "@storybook/addon-knobs": "^4.0.7",
    "@storybook/addon-links": "^4.0.4",
    "@storybook/addon-options": "^4.0.7",
    "@storybook/addon-viewport": "^4.0.8",
    "@storybook/react": "^4.0.4",
    "babel-loader": "^8.0.5",
    "cypress": "^3.2.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.11.1",
    "express": "^4.16.4",
    "fetch-mock": "^7.3.0",
    "husky": "^1.1.3",
    "jest-chain": "^1.0.5",
    "jest-enzyme": "^7.0.1",
    "jest-localstorage-mock": "^2.4.0",
    "lint-staged": "^8.0.4",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "mockdate": "^2.0.2",
    "react-docgen": "^2.21.0",
    "redux-devtools-extension": "^2.13.8",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.3",
    "rimraf": "^2.6.3",
    "storybook-addon-react-docgen": "^1.0.4",
    "typescript": "^3.3.4000"
  },
  "lint-staged": {
    "*.js": ["npm run lint:fix", "git add --all"],
    "*.json": ["prettier --write", "git add --all"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:coverage"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/src/index.js",
      "!<rootDir>/src/setupTests.js",
      "!<rootDir>/src/serviceWorker.js",
      "!<rootDir>/.storybook/*",
      "!<rootDir>/documentation/stories/**/*",
      "!<rootDir>/scripts/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": -10
      }
    }
  },
  "eslintIgnore": [
    "/src/setupTests.js",
    "/src/serviceWorker.js",
    "/coverage/*",
    "/build/*",
    "/scripts/*",
    "/public/**/*"
  ]
}
